datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Huesped {
  id               Int      @id @default(autoincrement())
  nombre           String
  tipoDocumento    String
  numeroDocumento  String
  nacionalidad     String
  direccion        String
  lugarProcedencia String
  lugarDestino     String
  telefono         String
  email            String
  motivoViaje      String
  fechaIngreso     String
  fechaSalida      String
  numeroReserva    String   @unique
  creadoEn         DateTime @default(now())

  checkinUrl       String?
  codigoTTLock     String?

  // ðŸ”¥ CAMPOS PARA ARCHIVOS
  archivoPasaporte String?
  archivoCedula    String?
  archivoFirma     String?
}

